# ============================================================================
# Configurações do Sistema Avançado de Conciliação de Funcionários
# ============================================================================

# Configurações Gerais
SISTEMA_NOME="Sistema Avançado de Conciliação de Funcionários"
VERSAO="2.0.0"
AUTOR="Sistema Automatizado"

# Arquivos Principais
ARQUIVO_PRINCIPAL="app-conciliacao-funcionarios.tsx"
ARQUIVO_ENGINE="reconciliationEngine.js"
ARQUIVO_UTILS="stringUtils.js"
ARQUIVO_HTML="index.html"

# Configurações de Similaridade
SIMILARIDADE_PADRAO=70
ALGORITMO_PADRAO="jaro-winkler"
NORMALIZAR_NOMES=true
IGNORAR_ACENTOS=true
DETECTAR_PADRONIZACOES=true

# Configurações de Servidor
PORTA_REACT=3000
PORTA_HTML=8000
PORTA_NODEJS=8080

# Diretórios
DIR_BACKUP="backup"
DIR_LOGS="logs"
DIR_DADOS="dados"
DIR_TEMP="temp"

# Arquivos de Log
LOG_EXECUCAO="execucao.log"
LOG_ERRO="erros.log"
LOG_DEBUG="debug.log"

# Configurações de Performance
MAX_REGISTROS_MEMORIA=10000
TIMEOUT_PROCESSAMENTO=300
CHUNK_SIZE=1000

# Formatos Suportados
FORMATOS_ENTRADA="csv,xlsx,xls,txt"
SEPARADORES_CSV=",;|	"
CODIFICACAO_PADRAO="UTF-8"

# URLs de CDN para modo HTML
REACT_CDN="https://unpkg.com/react@18/umd/react.development.js"
REACTDOM_CDN="https://unpkg.com/react-dom@18/umd/react-dom.development.js"
BABEL_CDN="https://unpkg.com/@babel/standalone/babel.min.js"
TAILWIND_CDN="https://cdn.tailwindcss.com"
LUCIDE_CDN="https://unpkg.com/lucide-react@0.263.1/dist/umd/lucide-react.js"

# Configurações de Backup
BACKUP_AUTOMATICO=true
MANTER_BACKUPS=7
COMPACTAR_BACKUP=false

# Configurações de Relatório
FORMATO_RELATORIO_PADRAO="json"
INCLUIR_METADATA=true
INCLUIR_ESTATISTICAS=true
INCLUIR_CONFIGURACOES=true

# Configurações de Interface
TEMA_PADRAO="light"
IDIOMA_PADRAO="pt-BR"
MOSTRAR_AJUDA_INICIAL=true
ANIMACOES_HABILITADAS=true

# Configurações de Segurança
VALIDAR_ARQUIVOS=true
SANITIZAR_ENTRADA=true
LOG_ACESSO=true

# Configurações de Debug
DEBUG_HABILITADO=false
LOG_NIVEL="INFO"
MOSTRAR_PERFORMANCE=false

# Mensagens do Sistema
MSG_SUCESSO="✅ Operação realizada com sucesso!"
MSG_ERRO="❌ Erro na operação:"
MSG_AVISO="⚠️ Atenção:"
MSG_INFO="ℹ️ Informação:"

# Configurações de Dependências
NODE_VERSAO_MIN="16.0.0"
NPM_VERSAO_MIN="8.0.0"
PYTHON_VERSAO_MIN="3.8.0"

# Comandos do Sistema
CMD_INSTALAR_NODE="choco install nodejs -y"
CMD_INSTALAR_PYTHON="choco install python -y"
CMD_ATUALIZAR_NPM="npm install -g npm@latest"

# Verificações de Integridade
VERIFICAR_ARQUIVOS=true
VERIFICAR_DEPENDENCIAS=true
VERIFICAR_PERMISSOES=true

# ============================================================================
# Configurações Avançadas (Não modificar sem conhecimento técnico)
# ============================================================================

# Algoritmos de Similaridade Disponíveis
ALGORITMOS="levenshtein,jaro-winkler,hibrido"

# Thresholds de Qualidade
QUALIDADE_ALTA=90
QUALIDADE_MEDIA=80
QUALIDADE_BAIXA=70

# Configurações de Cache
CACHE_HABILITADO=true
CACHE_TAMANHO_MAX=100
CACHE_TTL=3600

# Configurações de Monitoramento
MONITORAR_PERFORMANCE=true
COLETAR_METRICAS=true
RELATORIO_AUTOMATICO=false
